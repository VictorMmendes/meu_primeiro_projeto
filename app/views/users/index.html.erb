<% content_for :title, "Users" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Users</h1>
  <%= link_to "New User", new_user_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id="<%= dom_id user %>">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td class="text-end">
          <div class="btn-group">
            <%= link_to "Show", user, class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-outline-secondary" %>
            <%= button_to "Delete", user, method: :delete, form: { data: { turbo_confirm: "Tem certeza?" } }, class: "btn btn-sm btn-outline-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
