<% content_for :title, @user.name.to_s.presence || "User" %>

<div class="card mb-3">
  <div class="card-body">
    <%= render @user %>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to "Edit", edit_user_path(@user), class: "btn btn-secondary" %>
  <%= link_to "Back", users_path, class: "btn btn-outline-secondary" %>
  <%= button_to "Destroy", @user, method: :delete, form: { data: { turbo_confirm: "Tem certeza?" } }, class: "btn btn-danger" %>
</div>
