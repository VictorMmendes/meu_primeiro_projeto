<% content_for :title, "Posts" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Posts</h1>
  <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
</div>

<div id="posts" class="row g-3">
  <% @posts.each do |post| %>
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= post.title.presence || "(sem tÃ­tulo)" %></h5>
          <p class="card-text"><%= truncate(post.body.to_s, length: 160) %></p>
          <div class="d-flex gap-2">
            <%= link_to "Show", post, class: "btn btn-outline-primary btn-sm" %>
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-outline-secondary btn-sm" %>
            <%= button_to "Delete", post, method: :delete, form: { data: { turbo_confirm: "Tem certeza?" } }, class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
