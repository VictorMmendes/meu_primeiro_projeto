<h1>Login</h1>

<%= form_with url: sessions_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email, autofocus: true, required: true %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit 'Login' %>
  </div>
<% end %>